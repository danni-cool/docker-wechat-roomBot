{
  "name": "wechatbot-webhook",
  "version": "2.8.0",
  "description": "微信机器人webhook，帮你抹平了很多自己开发的障碍，基于 http 请求",
  "main": "index.js",
  "scripts": {
    "watch": "tsc -w",
    "lint": "npx oxlint && npx eslint",
    "build": "tsc && swc src -d dist/esm",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danni-cool/wechatbot-webhook.git"
  },
  "keywords": [
    "wechat",
    "bot",
    "webhook",
    "wechaty",
    "http-service"
  ],
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}": [
      "oxlint",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.11",
    "@types/node": "^20.11.30",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-oxlint": "^0.2.9",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.1",
    "oxlint": "^0.2.18",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  }
}
